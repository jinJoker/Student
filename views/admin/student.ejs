<%- include('header') -%>

  <div class="main-block">
<table class="table table-hover course-table table-striped">
      <thead>
        <tr>
          <th>学生学号</th>
          <th>学生姓名</th>
          <th>生日</th>
          <th>专业</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody id="tbody">


<% for(var i = 0; i < data.status; i++){  %>

	     <tr>
          <th scope="row" class="courseID"><%=data.data[i].studentID%></th>
          <td><input type="text" value="<%=data.data[i].studentName%>"></td>
          <td><%=data.data[i].birthday%></td>
          <td><%=data.data[i].major%></td>
          <td><button type="button" class="btn btn-primary Ssave">保存</button><button type="button" class="btn btn-danger Sdel">删除</button><button type="button" class="btn btn-warning resetPass">重置密码</button></td>
        </tr>

<%	} %>

      </tbody>
    </table>
<button type="button" class="btn btn-primary btn-lg btn-block"  data-toggle="modal" data-target="#studentForm">添加学生</button>    
  </div>

<!-- 添加学生 -->
<div class="modal fade" id="studentForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">添加学生</h4>
      </div>
      <div class="modal-body">
		<form>
		  <div class="form-group">
		    <label for="studentID">学生学号</label>
		    <input type="number" class="form-control" id="studentID" placeholder="学生学号">
		  </div>
		  <div class="form-group">
		    <label for="studentName">学生姓名</label>
		    <input type="text" class="form-control" id="studentName" placeholder="学生姓名">
		  </div>		  

		  <div class="form-group">
		    <label for="birthday">出生年月</label>
		    <input type="date" class="form-control" id="birthday" placeholder="出生年月">
		  </div>
		  <div class="form-group">
		    <label for="major">专业</label>
		    <input type="text" class="form-control" id="major" placeholder="专业">
		  </div>
		</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
        <button type="button" class="btn btn-primary" id="add-student">确认添加</button>
      </div>
    </div>
  </div>
</div>  

<script type="text/javascript" src='/bower_components/layer/mobile/layer.m.js'></script>
<%- include('footer') -%>


